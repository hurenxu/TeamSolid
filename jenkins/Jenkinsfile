pipeline {
    agent none
    environment {
        CI = 'true'
    }
    stages {
        stage('Build') {
	    agent {
        	docker {
                image 'node:6-alpine'
                args '-p 3000:8000'
                }
            }
            steps {
                sh 'npm install'
            }
        }
        stage('Test') {
            agent {
        	docker {
                image 'node:6-alpine'
                args '-p 3000:8000'
                }
            }
	    steps {
		sh 'chmod 777 ./jenkins/scripts/test.sh'
                sh './jenkins/scripts/test.sh'
            }
        }
        stage('Deliver') {
            agent any
	    steps {
		sh 'cd /home/dev/web'
		sh 'sudo npm start'
            }
        }
    }
}
